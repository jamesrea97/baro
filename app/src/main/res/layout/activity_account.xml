<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">

    <ImageButton
        android:id="@+id/btn_account"
        android:layout_width="@dimen/main_icon_width"
        android:layout_height="@dimen/main_icon_height"
        android:backgroundTint="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_account" />


    <ImageButton
        android:id="@+id/btn_followers"
        android:layout_width="@dimen/smaller_icon_width"
        android:layout_height="@dimen/smaller_icon_height"
        app:layout_constraintBottom_toTopOf="@+id/text_account"
        app:layout_constraintEnd_toStartOf="@+id/btn_settings"
        app:layout_constraintStart_toEndOf="@+id/btn_account"
        app:layout_constraintTop_toTopOf="@+id/btn_account" />

    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="@dimen/smaller_icon_width"
        android:layout_height="@dimen/smaller_icon_height"
        android:backgroundTint="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/text_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_followers"
        app:layout_constraintTop_toTopOf="@+id/btn_account"
        app:srcCompat="@drawable/ic_settings" />

    <TextView
        android:id="@+id/text_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account"
        app:layout_constraintEnd_toEndOf="@+id/btn_account"
        app:layout_constraintStart_toStartOf="@+id/btn_account"
        app:layout_constraintTop_toBottomOf="@+id/btn_account" />

    <TextView
        android:id="@+id/text_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/followers"
        app:layout_constraintEnd_toEndOf="@+id/btn_followers"
        app:layout_constraintStart_toStartOf="@+id/btn_followers"
        app:layout_constraintTop_toBottomOf="@+id/btn_followers" />

    <TextView
        android:id="@+id/text_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        app:layout_constraintEnd_toEndOf="@+id/btn_settings"
        app:layout_constraintStart_toStartOf="@+id/btn_settings"
        app:layout_constraintTop_toBottomOf="@+id/btn_settings" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/grid_courses"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_account">


    </androidx.recyclerview.widget.RecyclerView>


    <ImageButton
        android:id="@+id/btn_delete_remote"
        android:layout_width="@dimen/smaller_icon_width"
        android:layout_height="@dimen/smaller_icon_height"
        android:backgroundTint="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/text_delete_remote"
        app:layout_constraintEnd_toStartOf="@+id/btn_delete_local"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_settings" />

    <ImageButton
        android:id="@+id/btn_delete_local"
        android:layout_width="@dimen/smaller_icon_width"
        android:layout_height="@dimen/smaller_icon_height"
        android:backgroundTint="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/text_delete_local"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_delete_remote"
        app:srcCompat="@drawable/ic_settings" />

    <TextView
        android:id="@+id/text_delete_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_local"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_delete_local"
        app:layout_constraintStart_toStartOf="@+id/btn_delete_local" />

    <TextView
        android:id="@+id/text_delete_remote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_remote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_delete_remote"
        app:layout_constraintStart_toStartOf="@+id/btn_delete_remote" />

</androidx.constraintlayout.widget.ConstraintLayout>